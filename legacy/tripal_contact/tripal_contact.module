  ];

  $items['admin/tripal/legacy/tripal_contact/configuration'] = [
    'title' => 'Settings',
    'description' => 'Integration of Chado contacts.',
    'page callback' => 'drupal_get_form',
    'page arguments' => ['tripal_contact_admin'],
    'access arguments' => ['administer tripal contact'],
    'type' => MENU_LOCAL_TASK,
    'weight' => 5,
  ];

  $items['admin/tripal/legacy/tripal_contact/help'] = [
    'title' => 'Help',
    'description' => ('Help with the contact module.'),
    'page callback' => 'theme',
    'page arguments' => ['tripal_contact_help'],
    'access arguments' => ['administer tripal contact'],
    'type' => MENU_LOCAL_TASK,
    'weight' => 10,
  ];

  $items['admin/tripal/legacy/tripal_contact/sync'] = [
    'title' => ' Sync',
    'description' => 'Sync contacts in Chado with Drupal',
    'page callback' => 'drupal_get_form',
    // 'page arguments' => array('tripal_contact_sync_form'),
    'page arguments' => [
      'chado_node_sync_form',
      'tripal_contact',
      'chado_contact',
    ],
    'access arguments' => ['administer tripal contact'],
    'type' => MENU_LOCAL_TASK,
    'weight' => 0,
  ];

  $items['admin/tripal/legacy/tripal_contact/chado_contact_toc'] = [
    'title' => ' TOC',
    'description' => 'Manage the table of contents for contact nodes.',
    'page callback' => 'drupal_get_form',
    'page arguments' => ['tripal_core_content_type_toc_form', 'chado_contact'],
    'access arguments' => ['administer tripal contact'],
    'type' => MENU_LOCAL_TASK,
    'file' => 'includes/tripal_core.toc.inc',
    'file path' => drupal_get_path('module', 'tripal_core'),
    'weight' => 3,
  ];

  $items['admin/tripal/legacy/tripal_contact/contact/auto_name/%'] = [
    'page callback' => 'tripal_autocomplete_contact',
    'page arguments' => [6],
    'access arguments' => ['administer tripal contact'],

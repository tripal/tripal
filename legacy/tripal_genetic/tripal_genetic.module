  // the administative settings menu

  $items['admin/tripal/legacy/tripal_genetic'] = [
    'title' => 'Genetics',
    'description' => 'Genetic data including Genotypes.',
    'page callback' => 'tripal_genetic_admin_genetics_listing',
    'access arguments' => ['administer tripal genetic'],
    'type' => MENU_NORMAL_ITEM,
  ];

  $items['admin/tripal/legacy/tripal_genetic/help'] = [
    'title' => 'Help',
    'description' => "A description of the Tripal genetic module including a short description of it's usage.",
    'page callback' => 'theme',
    'page arguments' => ['tripal_genetic_help'],
    'access arguments' => ['administer tripal genetic'],
    'type' => MENU_LOCAL_TASK,
  ];

  $items['admin/tripal/legacy/tripal_genetic/views/genetics/enable'] = [
    'title' => 'Enable genetic Administrative View',
    'page callback' => 'tripal_enable_view',
    'page arguments' => [
      'tripal_genetic_admin_genetics',
      'admin/tripal/legacy/tripal_genetic',
    ],
    'access arguments' => ['administer tripal genetic'],
    'type' => MENU_CALLBACK,
  ];

  return $items;
}


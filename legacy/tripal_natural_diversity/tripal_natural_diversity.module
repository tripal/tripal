/**
 *  Implements hook_menu().
 *
 *  Menu items are automatically added for the new node types created
 *  by this module to the 'Create Content' Navigation menu item.  This function
 *  adds more menu items needed for this module.
 *
 * @ingroup tripal_legacy_natural_diversity
 */
function tripal_natural_diversity_menu() {
  $items = [];

  // the administative settings menu

  $items['admin/tripal/legacy/tripal_natdiv'] = [
    'title' => 'Natural Diversity Experiments',
    'description' => 'Experiments relating to natural diversity such as genotype and phenotype experiments.',
    'page callback' => 'tripal_natural_diversity_admin_natdiv_view',
    'access arguments' => ['administer tripal nd'],
    'type' => MENU_NORMAL_ITEM,
  ];

  $items['admin/tripal/legacy/tripal_natdiv/help'] = [
    'title' => 'Help',
    'description' => ('Help for the Tripal natural diversity module.'),
    'page callback' => 'theme',
    'page arguments' => ['tripal_natural_diversity_help'],
    'access arguments' => ['administer tripal nd'],
    'type' => MENU_LOCAL_TASK,
    'weight' => 10,
  ];

  $items['admin/tripal/legacy/tripal_natdiv/views/natdiv_exp/enable'] = [
    'title' => 'Enable Natural Diversity Administrative View',
    'page callback' => 'tripal_enable_view',
    'page arguments' => [
      'tripal_natural_diversity_admin_natdiv_exp',
      'admin/tripal/legacy/tripal_natdiv',
    ],
    'access arguments' => ['administer tripal nd'],
    'type' => MENU_CALLBACK,
  ];

  return $items;
}


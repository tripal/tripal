 * @ingroup tripal_legacy_organism
 */
function tripal_organism_theme($existing, $type, $theme, $path) {
  $core_path = drupal_get_path('module', 'tripal_core');

  $items = [
    'node__chado_organism' => [
      'template' => 'node--chado-generic',
      'render element' => 'node',
      'base hook' => 'node',
      'path' => "$core_path/theme/templates",
    ],
    'tripal_organism_base' => [
      'variables' => ['node' => NULL],
      'template' => 'tripal_organism_base',
      'path' => "$path/theme/templates",
    ],
    'tripal_organism_properties' => [
      'variables' => ['node' => NULL],
      'template' => 'tripal_organism_properties',
      'path' => "$path/theme/templates",
    ],
    'tripal_organism_references' => [
      'variables' => ['node' => NULL],
      'template' => 'tripal_organism_references',
      'path' => "$path/theme/templates",
    ],
    'tripal_organism_teaser' => [
      'variables' => ['node' => NULL],
      'template' => 'tripal_organism_teaser',
      'path' => "$path/theme/templates",
    ],
    'tripal_organism_help' => [
      'template' => 'tripal_organism_help',
      'variables' => [NULL],
      'path' => "$path/theme/templates",
    ],
  ];
  return $items;
}


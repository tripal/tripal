  $items = [];
  // The administative settings menu

  $items['admin/tripal/legacy/tripal_library'] = [
    'title' => 'Libraries',
    'description' => 'Any biological library. Examples of genomic libraries include BAC, cDNA, FOSMID, etc.',
    'page callback' => 'tripal_library_admin_libraries_listing',
    'access arguments' => ['administer tripal library'],
    'type' => MENU_NORMAL_ITEM,
  ];

  $items['admin/tripal/legacy/tripal_library/help'] = [
    'title' => 'Help',
    'description' => 'Basic Description of Tripal Library Module Functionality',
    'page callback' => 'theme',
    'page arguments' => ['tripal_library_help'],
    'access arguments' => ['administer tripal library'],
    'type' => MENU_LOCAL_TASK,
    'weight' => 10,
  ];

  $items['admin/tripal/legacy/tripal_library/configuration'] = [
    'title' => 'Settings',
    'description' => 'Configure the Tripal Library module',
    'page callback' => 'drupal_get_form',
    'page arguments' => ['tripal_library_admin'],
    'access arguments' => ['administer tripal library'],
    'type' => MENU_LOCAL_TASK,
    'weight' => 5,
  ];
  $items['admin/tripal/legacy/tripal_library/sync'] = [
    'title' => ' Sync',
    'description' => 'Create pages on this site for libraries stored in Chado',
    'page callback' => 'drupal_get_form',
    'page arguments' => [
      'chado_node_sync_form',
      'tripal_library',
      'chado_library',
    ],
    'access arguments' => ['administer tripal library'],
    'type' => MENU_LOCAL_TASK,
    'weight' => 2,
  ];

  $items['admin/tripal/legacy/tripal_library/chado_library_toc'] = [
    'title' => ' TOC',
    'description' => 'Manage the table of contents for library nodes.',
    'page callback' => 'drupal_get_form',
    'page arguments' => ['tripal_core_content_type_toc_form', 'chado_library'],
    'access arguments' => ['administer tripal library'],
